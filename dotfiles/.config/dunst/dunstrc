# Ref: https://github.com/dunst-project/dunst/blob/master/dunstrc

[global]
    monitor = 0
    follow = keyboard
    origin = top-right
    offset = 15x15

    separator_height = 0
    separator_color = auto

    text_icon_padding = 4

    frame_width = 1
    frame_color = "#788388bb"
    corner_radius = 10
    gap_size = 8

    progress_bar = true
    progress_bar_height = 10
    progress_bar_corner_radius = 5
    progress_bar_frame_width = 0

    sort = yes

    line_height = 0

    markup = yes

    # ref: https://docs.gtk.org/Pango/pango_markup.html#convenience-tags
    format = "<big><b>%s</b></big>\n%b"
    alignment = left
    ellipsize = end

    show_indicators = yes

    icon_theme = Adwaita
    icon_position = left

    dmenu = rofi -dmenu -p dunst

[urgency_low]
    background = "#21212177"
    foreground = "#FAFAFA"
    timeout = 10

[urgency_normal]
    background = "#212121"
    foreground = "#FAFAFA"
    timeout = 10

[urgency_critical]
    background = "#880808"
    foreground = "#FAFAFA"
    timeout = 0

[battery_full]
    summary = "Battery full"
    background = "#2E7D32"

[play_sound]
    summary = "*"
    script = "~/.config/dunst/play_notification_sound.sh"
